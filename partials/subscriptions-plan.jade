header
    h1
        span Taiga
        span.green {{vm.sectionName}}
    p.admin-subtitle
        svg.icon.icon-question
            use(xlink:href="#icon-question")
        span(translate="{{'SUBSCRIPTIONS.PLAN_STARTING'}}")
        
section.subscription-your-plan
    header
        h2.title(translate="{{'SUBSCRIPTIONS.YOUR_RECOMMENDED_PLAN'}}")
        .plan-options
            button.button-green(translate="{{'SUBSCRIPTIONS.WANT_PLAN'}}")
            button.button-gray(translate="{{'SUBSCRIPTIONS.UPDATE_PLAN'}}")
    .plan
        img.plan-image(
            src="/#{v}/images/taiga-contrib-subscriptions/images/{{vm.myPlan.name | lowercase}}.png",
            alt="{{vm.myPlan.name}} {{'SUBSCRIPTIONS.PLAN' | translate}}"
        )
        .plan-data
            .plan-name {{vm.myPlan.name}} {{'SUBSCRIPTIONS.PLAN' | translate}}
            ul.plan-info 
                li(
                    translate="SUBSCRIPTIONS.PRIVATE_PROJECTS_LIMIT"
                    translate-values="{number: vm.myPlan.private_projects}"
                )
                li(
                    translate="SUBSCRIPTIONS.MEMBERS_LIMIT"
                    translate-values="{number: vm.myPlan.project_members}"
                )
        .plan-pricing
            .pricing-month
                span.currency $
                span.number {{vm.myPlan.amount_month}}
                span.frequency /{{'SUBSCRIPTIONS.FREQUENCY_MONTH' | translate}}
            
            .pricing-year
                span.currency $
                span.number {{vm.myPlan.amount_year}}
                span.frequency /{{'SUBSCRIPTIONS.FREQUENCY_YEAR' | translate}}
            
aside.subscription-info
    h3.title(translate="SUBSCRIPTIONS")
    ul
        li(
            translate="SUBSCRIPTIONS.HELP.NO_PROJECTS"
            translate-values="{name: vm.myPlan.name}"
        )
        li(translate="SUBSCRIPTIONS.HELP.UPGRADE")
        li(translate="SUBSCRIPTIONS.HELP.ACTIVATION")
        li(translate="SUBSCRIPTIONS.HELP.PUBLIC")
        li
            a(
                href="https://taiga.io/support/payment-process/"
                title="{{'SUBSCRIPTIONS.HELP.MORE_INFO_TITLE' | translate}}"
                target="_blank"
                translate="SUBSCRIPTIONS.HELP.MORE_INFO"
            )
